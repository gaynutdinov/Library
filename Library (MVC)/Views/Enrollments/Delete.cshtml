@model Library__MVC_.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h3>Вы действительно хотите удалить запись из журнала?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Книга
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd class>
        <dt class = "col-sm-2">
            Автор
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName)
            @Html.DisplayFor(model => model.Author.MiddleName)
            @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt class = "col-sm-2">
            Издательство
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollmentID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
