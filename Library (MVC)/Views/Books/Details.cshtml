@model Library__MVC_.Models.Book

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Подробности</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Наименование
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Дата публикации
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishingDate)
        </dd>
            <table class="table">
                <tr>
                    <th>Автор</th>
                    <th>Издательство</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.Author.FirstName+" "+item.Author.LastName+" "+item.Author.LastName)*@
                            @Html.DisplayFor(modelItem => item.Author.FirstName)
                            @Html.DisplayFor(modelItem => item.Author.MiddleName)
                            @Html.DisplayFor(modelItem => item.Author.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publisher.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
